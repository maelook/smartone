<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffffff"
    android:orientation="vertical"
    android:id="@+id/data_container"
    tools:context="com.maelook.fragment.DataFragment">

    <RelativeLayout
        android:background="@color/deep_blue"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_gravity="center_horizontal"
        android:id="@+id/relativeLayout">

        <TextView
            android:id="@+id/chat"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/data"
            android:textSize="24sp"
            android:layout_centerInParent="true"/>

    </RelativeLayout>
    <LinearLayout
        android:background="@mipmap/data1"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="190dp"
        android:id="@+id/linearLayout"
        android:layout_below="@+id/relativeLayout"
        android:layout_alignParentStart="true">
    </LinearLayout>

    <HorizontalScrollView
        android:layout_width="match_parent"
        android:layout_height="0.1dp"
        android:gravity="bottom"
        android:layout_below="@+id/relativeLayout"
        android:layout_alignParentStart="true"
        android:id="@+id/horizontalScrollView"/>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    </LinearLayout>

    <HorizontalScrollView
        android:layout_width="match_parent"
        android:layout_height="0.1dp"
        android:background="@color/gray"
        android:gravity="top"
        android:layout_below="@+id/linearLayout"
        android:layout_alignParentStart="true"
        android:id="@+id/horizontalScrollView2"/>

    <LinearLayout
        android:id="@+id/datalayout"
        android:layout_below="@+id/horizontalScrollView2"
        android:layout_marginTop="10dp"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="150dp">

        <Button
            android:id="@+id/data2"
            android:layout_width="match_parent"
            android:layout_height="140dp"
            android:layout_marginLeft="2dp"
            android:background="@mipmap/data2"/>
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:id="@+id/datalayout2"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginStart="10dp"
        android:layout_below="@+id/datalayout"
        android:layout_alignParentStart="true">

        <Button
            android:id="@+id/data3"
            android:layout_width="160dp"
            android:layout_height="140dp"
            android:layout_marginRight="20dp"
            android:background="@mipmap/data3"/>

        <Button
            android:id="@+id/data4"
            android:layout_width="160dp"
            android:layout_height="140dp"
            android:layout_marginLeft="-5dp"
            android:layout_marginRight="50dp"
            android:background="@mipmap/data4"/>

    </LinearLayout>


</RelativeLayout>