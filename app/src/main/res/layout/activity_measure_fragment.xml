<TableLayout
              xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical"
              android:background="@color/white"
              tools:context="com.maelook.fragment.MeasureFragment">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="@color/deep_blue"
        android:layout_gravity="center_horizontal"
        android:id="@+id/relativeLayout">

        <TextView
            android:id="@+id/chat"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/setting_1"
            android:textSize="24sp"
            android:layout_centerInParent="true"/>


    </RelativeLayout>
    <HorizontalScrollView
        android:layout_width="match_parent"
        android:layout_height="0.1dp"
        android:background="@color/gray"
        android:gravity="bottom"
        android:layout_below="@+id/relativeLayout"
        android:layout_alignParentStart="true"
        android:id="@+id/horizontalScrollView"/>

    <TableRow>

        <Button
            android:id="@+id/Single_measure"
            android:layout_width="180dp"
            android:layout_height="210dp"
            android:background="@mipmap/measure1"
            android:layout_marginRight="5dp"
            android:layout_marginBottom="5dp"
            android:layout_marginTop="5dp"/>

        <Button
            android:id="@+id/Many_measure"
            android:background="@mipmap/measure2"
            android:layout_width="180dp"
            android:layout_height="210dp"
            android:layout_marginRight="5dp"
            android:layout_marginBottom="5dp"
            android:layout_marginTop="5dp"/>

    </TableRow>

    <TableRow>

        <Button
            android:id="@+id/Continuous_measure"
            android:background="@mipmap/measure3"
            android:layout_width="180dp"
            android:layout_height="210dp"
            android:layout_marginRight="5dp"
            android:layout_marginBottom="5dp"
            android:layout_marginTop="5dp"/>

        <Button
            android:id="@+id/Flash_measure"
            android:layout_width="180dp"
            android:layout_height="210dp"
            android:background="@mipmap/measure4"
            android:layout_marginRight="5dp"
            android:layout_marginBottom="5dp"
            android:layout_marginTop="5dp"/>

    </TableRow>
    <HorizontalScrollView
        android:layout_width="match_parent"
        android:layout_height="0.1dp"
        android:background="@color/gray"
        android:gravity="top"
        android:layout_below="@+id/linearLayout"
        android:layout_alignParentStart="true"
        android:id="@+id/horizontalScrollView2"/>

    <LinearLayout
        android:background="@color/deep_blue"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_below="@+id/horizontalScrollView2"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true">

        <TextView
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/measure_four"
            android:id="@+id/textView"/>


    </LinearLayout>

</TableLayout>