<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical"
              tools:context="com.maelook.fragment.MeasureFragment">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_gravity="center_horizontal"
        android:id="@+id/relativeLayout">

        <TextView
            android:id="@+id/chat"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/measure_1"
            android:textSize="24sp"
            android:layout_centerInParent="true"/>


    </RelativeLayout>

    <HorizontalScrollView
        android:layout_width="match_parent"
        android:layout_height="0.1dp"
        android:background="@color/gray"
        android:gravity="bottom"
        android:layout_below="@+id/relativeLayout"
        android:layout_alignParentStart="true"
        android:id="@+id/horizontalScrollView"/>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    </LinearLayout>

    <GridLayout
        android:background="@color/gray_cc"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="420dp"
        android:layout_below="@+id/horizontalScrollView"
        android:layout_alignParentStart="true"
        android:id="@+id/linearLayout">

        <ImageView
            android:src="@drawable/measure1"
            android:layout_width="210dp"
            android:layout_height="300dp"
            android:id="@+id/measure1" />

        <ImageView
            android:src="@drawable/measure2"
            android:layout_width="300px"
            android:layout_height="300px"
            android:id="@+id/measure2"
            android:layout_toLeftOf="@+id/measure1" />
    </GridLayout>
    <GridLayout
        android:background="@color/gray_cc"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="420dp"
        android:layout_below="@+id/linearLayout"
        android:id="@+id/linearLayout2">

        <ImageView
            android:src="@drawable/measure1"
            android:layout_width="210dp"
            android:layout_height="300px"
            android:id="@+id/measure3" />

        <ImageView
            android:src="@drawable/measure2"
            android:layout_width="300px"
            android:layout_height="300px"
            android:id="@+id/measure4"
            android:layout_toLeftOf="@+id/measure3" />
    </GridLayout>
    <HorizontalScrollView
        android:layout_width="match_parent"
        android:layout_height="0.1dp"
        android:background="@color/gray"
        android:gravity="top"
        android:layout_below="@+id/linearLayout"
        android:layout_alignParentStart="true"
        android:id="@+id/horizontalScrollView2"/>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/horizontalScrollView2"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true">

        <TextView
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/user_quickly"
            android:id="@+id/textView"/>


     </LinearLayout>


</RelativeLayout>